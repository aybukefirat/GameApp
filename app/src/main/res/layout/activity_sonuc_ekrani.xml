        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/pink"
        android:text="Tekrar Dene"
        android:textAllCaps="true"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
